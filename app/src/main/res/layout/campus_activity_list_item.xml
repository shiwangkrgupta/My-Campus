<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:id="@+id/messageLayoutParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Sender Profile -->
        <androidx.cardview.widget.CardView
            android:id="@+id/profile"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="13dp">

            <ImageView
                android:id="@+id/senderProfileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_default_user" />
        </androidx.cardview.widget.CardView>

        <!-- Message Container -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/messageLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:background="@drawable/rounded_ractangle_1"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <!-- Sender Name -->
            <TextView
                android:id="@+id/senderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="6dp"
                android:maxLength="30"
                android:maxLines="1"
                android:text="Senders Name"
                android:textColor="#003731"
                android:textSize="15sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Reply Preview Layout -->
            <LinearLayout
                android:id="@+id/replyLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="6dp"
                android:background="#e1e1e1"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/senderName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/replySender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sender"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="#004d40" />

                <TextView
                    android:id="@+id/replyMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Replied message preview"
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <ImageView
                    android:id="@+id/btnCancelReply"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_close" />
            </LinearLayout>

            <!-- Actual Message -->
            <TextView
                android:id="@+id/msgBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Message Body"
                android:textColor="#000"
                android:textSize="16sp"
                android:gravity="start"
                app:layout_constraintTop_toBottomOf="@+id/replyLayout"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Time -->
            <TextView
                android:id="@+id/sentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="6dp"
                android:text="16/12 3:24 pm"
                android:textSize="10sp"
                app:layout_constraintTop_toBottomOf="@+id/msgBody"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
